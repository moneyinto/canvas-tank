{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es2015"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "target": "es5"
    },
    "baseUrl": ".",
    "types": [
        "node"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "compileOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
